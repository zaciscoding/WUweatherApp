                     <button type="submit" class=" hvr-float-shadow formbtn" value="submit"> Search for weather ! </button> 
                  </div> <!-- divider --> 
               </fieldset> 
             </form>

                  <div>  <!-- forecast div --> 
               <% if(weather !== null){ %> 
                  <p class="weather"> <img class="weathericon" src="<%= icon %>"> <P> 
                  <p class="weather"> Weather: <%= weather %> <P> 
                  <p class="weather"> Temperature: <%= temp %>  <P> 
                  <p class="weather"> In: <%= place %>  <P> 
              
              <% } %>  
